<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#FFFFFF"
        >
    <RadioGroup
            android:id="@+id/radio_btn_group"
            android:layout_width="fill_parent"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_btn_text1"
                android:checked="true"
                android:textColor="#000000"
                android:id="@+id/radioButton" android:layout_gravity="left|center_vertical"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_btn_text2"
                android:textColor="#000000"
                android:id="@+id/radioButton1" android:layout_gravity="left|center_vertical"/>
    </RadioGroup>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/run_activity_btn_text"
            android:background="#00A2E8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/run_activity_button" android:layout_gravity="center"/>
</LinearLayout>

