<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_msg_box_btn_text"
            android:onClick="onShowMsgBoxButtonClick"
            android:id="@+id/show_msg_box_btn" android:layout_gravity="center"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_toast_btn_text"
            android:onClick="onShowToastButtonClick"
            android:id="@+id/show_toast_btn" android:layout_gravity="center"/>
</LinearLayout>