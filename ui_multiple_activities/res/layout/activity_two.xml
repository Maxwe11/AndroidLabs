<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:id="@+id/linearLayout">
        <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="New EditText"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:id="@+id/editText" android:layout_gravity="left|center_vertical"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/run_btn_text"
                android:id="@+id/button" android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignParentTop="true" android:layout_marginTop="48dp" android:id="@+id/linearLayout1">
        <ToggleButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/toggleButton"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linearLayout1"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/run_btn_text"
                android:id="@+id/button1" android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignParentTop="true" android:layout_marginTop="96dp" android:id="@+id/linearLayout2">
        <SeekBar
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar" android:layout_alignLeft="@+id/linearLayout"
                android:layout_below="@+id/linearLayout1"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/run_btn_text"
                android:id="@+id/button2" android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignParentTop="true" android:layout_marginTop="144dp" android:id="@+id/linearLayout3">
        <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/test_array"
                android:id="@+id/spinner" android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/run_btn_text"
                android:id="@+id/button3" android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>