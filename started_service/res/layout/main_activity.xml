<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start service"
            android:id="@+id/button" android:layout_gravity="center" android:onClick="onStartService"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop service"
            android:id="@+id/button1" android:layout_gravity="center" android:onClick="onStopService"
            android:enabled="false"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IntentService"
            android:id="@+id/button2" android:layout_gravity="center" android:onClick="onStartIntentService"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop IntentService"
            android:id="@+id/button3" android:layout_gravity="center" android:onClick="onStopIntentService"
            android:enabled="false"/>
</LinearLayout>

